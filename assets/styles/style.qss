QPushButton {
    background-color: rgba(255, 255, 255, 255);
    border-radius: 30px;
    padding: 5px 5px;
}
QPushButton:hover {
    background-color: rgba(255, 255, 255, 128); /* 128/256 w skali widoczno≈õci*/
}
QPushButton:pressed {
    background-color: rgba(255, 255, 255, 64);
}

/* Menu boczne */
QPushButton[class="menu_button"] {
    width: 100px;
    height: 100px;
}